pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Build code using Maven
                echo 'Building package using Maven'
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                // Run unit tests using Maven (Surefire Plugin)
                echo 'Running unit tests using Maven'
                
                // Run integration tests using Maven (Failsafe Plugin)
                echo 'Running integration tests using Maven'
            }
            post {
                success {
                    mail to: 'shalomingabo99@gmail.com',
                         subject: 'Unit and Integration Tests Success',
                         body: 'Unit and Integration Tests have passed successfully!',
                         attachLog: true
                }
                failure {
                    mail to: 'shalomingabo99@gmail.com',
                         subject: 'Unit and Integration Tests Failure',
                         body: 'Unit and Integration Tests have failed. Please check logs for details.',
                         attachLog: true
                }
            }
        }
        
        stage('Code Analysis') {
            steps {
                // Run code analysis using SonarQube
                echo 'Running code analysis using SonarQube'
            }
            post {
                success {
                    mail to: 'shalomingabo99@gmail.com',
                         subject: 'Code Analysis Success',
                         body: 'Code Analysis has passed successfully!',
                         attachLog: true
                }
                failure {
                    mail to: 'shalomingabo99@gmail.com',
                         subject: 'Code Analysis Failure',
                         body: 'Code Analysis has failed. Please check logs for details.',
                         attachLog: true
                }
            }
        }
        
        stage('Security Scan') {
            steps {
                // Perform security scan using OWASP ZAP
                echo 'Performing security scan using OWASP ZAP'
            }
            post {
                success {
                    mail to: 'shalomingabo99@gmail.com',
                         subject: 'Security Scan Success',
                         body: 'Security Scan has passed successfully!',
                         attachLog: true
                }
                failure {
                    mail to: 'shalomingabo99@gmail.com',
                         subject: 'Security Scan Failure',
                         body: 'Security Scan has failed. Please check logs for details.',
                         attachLog: true
                }
            }
        }
        
        // Other stages omitted for brevity
        
    }
    
    // Global post section for overall pipeline status
    post {
        success {
            mail to: 'shalomingabo99@gmail.com',
                 subject: 'Pipeline Success',
                 body: 'The pipeline ran successfully!',
                 attachLog: true
        }
        failure {
            mail to: 'shalomingabo99@gmail.com',
                 subject: 'Pipeline Failure',
                 body: 'The pipeline failed. Please check logs for details.',
                 attachLog: true
        }
    }
}
